<div class="container">
  <h1>Add a new review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, :collection => (1..5) %>
    <%= f.input :content %>
    <%= f.submit "Submit", class: 'btn btn-light' %>
  <% end %>
<br>
  <%= link_to 'Back', restaurant_path(@restaurant), class: 'btn btn-primary' %>
</div>
